---
import {
  getLangFromUrl,
  useTranslations,
  getLink,
  type translate,
} from "@/i18n/utils";

import HeaderLink from "./HeaderLink.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const urls: { titre: translate; link: string }[] = [
  {
    titre: "nav.home",
    link: getLink(lang, ""),
  },
  {
    titre: "nav.articles",
    link: getLink(lang, "articles"),
  },
  {
    titre: "nav.about",
    link: getLink(lang, "about"),
  },
];
---

<ul>
  {
    urls.map((data) => (
      <li>
        <HeaderLink href={data.link}>{t(data.titre)}</HeaderLink>
      </li>
    ))
  }
</ul>
<style>
  ul {
    display: flex;
    list-style: none;
  }
  a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
</style>
