---
import { Posts } from "@/components/core/posts";
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import appConfig from "app.config";
import { getEntry } from "astro:content";

export async function getStaticPaths() {
  return appConfig.langs.map((lang) => {
    return {
      params: { lang },
    };
  });
}

const { lang } = Astro.params;

const pageHomeEntry = await getEntry("pages", `${lang}`);

const { Content } = await pageHomeEntry!.render();
---

<DefaultLayout
  title={pageHomeEntry?.data.title}
  description={pageHomeEntry?.data.description}
  mode="home"
>
  <Posts
    client:only="react"
    featuredPostTitle="Poste Ã  la une"
    featuredPostBtn="Plus d'informations >"
    allPostsTitle="Tous les articles"
    allPostsBtn="Voir tout"
  />
  <Content />
</DefaultLayout>
